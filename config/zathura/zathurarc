set completion-highlight-bg     "#1c1c1c"
set completion-highlight-fg     "#875faf"

# zathura
set font                        "Hack 12"
set guioptions                  none
# background behind the paper
set default-bg                  "#1c1c1c"
# statusbar cursor
set default-fg                  "#20ad80"

set recolor                     "true"
 set recolor-keephue             "true"
# text font
set recolor-darkcolor           "#d4bebe"
# text background
set recolor-lightcolor          "#1c1c1c"

# statusbar
# status bar font
set statusbar-fg                "#4f97d7"
# status bar color
set statusbar-bg                "#1c1c1c"
set statusbar-basename          false
set statusbar-home-tilde        true
