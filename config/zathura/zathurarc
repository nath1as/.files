set statusbar-v-padding         2

# inputbar background
set inputbar-bg                 "#20ad80"
# inputbar font
set inputbar-fg                 "#1c1c1c"

# notification
# inputbar background on error message
set notification-error-bg       "#ee3333"
# inputbar font on error message
set notification-error-fg       "#1c1c1c"
# inputbar background on warning message
set notification-warning-bg     "#d75f87"
# inputbar font on warning message
set notification-warning-fg     "#1c1c1c"
# unknown
set notification-bg             "#4f97d7"
set notification-fg             "#1c1c1c"
selection-notification          true

