! Font
URxvt*font: xft:Hack:size=17,xft:inconsolata:size=10:antialias=true,xft:DejaVu Sans:size=10:antialias=true,xft:Sauce Code Powerline:size=16:antialias=true:hinting=true

!! Extensions
URxvt.perl-ext-common:	default,matcher,resize-font,url-select,keyboard-select
URxvt.colorUL:		#4f97d7
!! url-select
URxvt.keysym.M-u:	perl:url-select:select_next
URxvt.url-select.launcher: firefox-nightly
URxvt.url-select.underline: true
!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
!! resize-font
URxvt.resize-font.smaller:	C-Down
URxvt.resize-font.bigger:	C-Up
!! Matcher
URxvt.url-launcher:	firefox-nightly
URxvt.matcher.button: 1

! URxvt
URxvt.modifier: mod1
URxvt*loginShell: true
URxvt*dynamicColors: on
URxvt.imLocale: en_US.UTF-8
URxvt.saveLines: 5000
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt*termName: xterm-256color
URxvt.transparent: false
URxvt.visualBell: false
URxvt*depth: 32
URxvt.letterSpace: -1

! Paste with shift-ctrl-v
!URxvt.keysym.Shift-Control-V: perl:clipboard:paste
!URxvt.iso14755: False
! URxvt.perl-ext-common: default,clipboard

! Colors
*.boldMode: true
*.colorBDMode: false
*.colorBD: #d4bebd

! Base16 Eighties
#define col1 #292b2e
#define col2 #ee3333
#define col3 #20ad80
#define col4 #dd75dd
#define col5 #d75f87
#define col6 #875faf
#define col7 #4f97d7
#define col8 #ececec
#define col0 #333333

*.foreground:   #d4bebe 
*.background:   #1c1c1c 
*.border:   #1c1c1c 
*.cursorColor:  col3
*.cursorBlink: true

*.color0:       col0
*.color1:       col2
*.color2:       col3
*.color3:       col4
*.color4:       col5
*.color5:       col6
*.color6:       col7
*.color7:       col0
*.color8:       col8
*.color9:       col2
*.color10:      col3
*.color11:      col4
*.color12:      col5
*.color13:      col6
*.color14:      col7
*.color15:      col8


! rofi settings
 rofi.theme: inline
 rofi.terminal: urxvt
 rofi.show-icons: true
 rofi.location: 1  
 rofi.xoffset: 190px
